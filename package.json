{
  "name": "minta",
  "version": "1.0.1",
  "description": "Generate regular expressions with ease",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=developement electron .",
    "start-prod": "electron .",
    "build": "npm run pack_win && npm run build_osx",
    "build_osx": "npm run pack_osx && npm run compress",
    "pack_osx": "electron-packager . Minta --out=dist/osx --platform=darwin --arch=x64 --overwrite --icon=resources/minta_600.icns",
    "compress": "cd dist/osx/Minta-darwin-x64 && tar cvzf Minta.tar.gz Minta.app",
    "pack_win": "electron-packager . Minta --out=dist/windows --platform=win32 --arch=x64 --overwrite --icon=resources/minta_600.ico"
  },
  "repository": "https://github.com/ecrmnn/minta",
  "author": {
    "name": "Daniel Eckermann",
    "email": "danieleckermann@gmail.com",
    "url": "http://danieleckermann.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.4.1"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "clipboard": "^1.5.16",
    "electron-packager": "^8.4.0",
    "regexgen": "^1.0.0",
    "vue": "^2.1.6"
  }
}